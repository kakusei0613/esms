<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.esms.mapper.IAdminMapper">
    <select id="selectByUserName" resultType="com.example.esms.domain.Admin">
        SELECT * FROM adminlist WHERE username = #{username} AND password = #{password};
    </select>
    <select id="selectAll" resultType="com.example.esms.domain.Admin">
        SELECT * FROM adminlist;
    </select>
    <insert id="insert" parameterType="com.example.esms.domain.Admin">
        INSERT INTO adminlist(username,password) VALUES(#{userName}, #{userPassword});
    </insert>
    <delete id="deleteById" parameterType="java.lang.Integer">
        DELETE FROM adminlist WHERE id = #{id};
    </delete>
    <insert id="recorder" parameterType="java.lang.String">
        INSERT INTO actionrecorder VALUES(#{username}, (SELECT NOW()), #{action}, #{ipaddress});
    </insert>
    <select id="selectAction" parameterType="com.example.esms.domain.Admin" resultMap="baseRecordMap">
        SELECT * FROM useractionrecorder WHERE username = #{username};
    </select>
    <resultMap id="baseRecordMap" type="com.example.esms.domain.UserActionRecord">
        <result column="username" property="username" jdbcType="VARCHAR"/>
        <result column="actiontime" property="time" jdbcType="DATE"/>
        <result column="action" property="action" jdbcType="VARCHAR"/>
        <result column="address" property="address" jdbcType="VARCHAR"/>
    </resultMap>
</mapper>